<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/navbar.ejs") %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <%= pergunta.descricao %>
        <hr>
        <form method="POST" action="/responder">
            <label><h4>Resposta:</h4></label>
            <textarea placeholder="Digite sua resposta" class="form-control" name ="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-warning">Responder</button>
        </form>
        <hr>
        <h3>Respostas cadastradas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>
    <h1></h1>
</body>
<%- include("partials/footer.ejs") %>