<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/navbar.ejs") %>
    <div class="container">
        <hr>
        <h2>Perguntas</h2><hr>
        <a href ="/perguntar" class="btn btn-warning">Perguntar</a><hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-warning">Responder</button></a>
                </div>
            </div>

        <% }) %>
    </div>
    <h1></h1>
</body>
